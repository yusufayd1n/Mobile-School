<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/englishbackground"
    tools:context=".English.EnglishChoice">


    <ImageView
        android:id="@+id/animalSign"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:onClick="signtoAnimal"
        app:layout_constraintEnd_toStartOf="@+id/numberSign"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/animals" />

    <ImageView
        android:id="@+id/numberSign"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:onClick="signtoNumbers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/animalSign"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/numbers" />

    <ImageView
        android:id="@+id/fruitSign"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:onClick="signtoFruits"
        app:layout_constraintEnd_toStartOf="@+id/bodypartSign"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/animalSign"
        app:srcCompat="@drawable/fruits" />

    <ImageView
        android:id="@+id/bodypartSign"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:onClick="signtoBodyParts"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/fruitSign"
        app:layout_constraintTop_toBottomOf="@+id/numberSign"
        app:srcCompat="@drawable/bodyparts" />

    <ImageView
        android:id="@+id/colorSign"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:onClick="signtoColors"
        app:layout_constraintEnd_toStartOf="@+id/thingsSign"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fruitSign"
        app:srcCompat="@drawable/colors" />

    <ImageView
        android:id="@+id/thingsSign"
        android:layout_width="180dp"
        android:layout_height="200dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:onClick="signtoThings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/colorSign"
        app:layout_constraintTop_toBottomOf="@+id/bodypartSign"
        app:srcCompat="@drawable/things" />
</androidx.constraintlayout.widget.ConstraintLayout>